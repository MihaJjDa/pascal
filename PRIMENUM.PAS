program primenum(input, output);

var
  a: boolean;
  i, n: integer;

begin
  writeln('Enter an integer:');
  readln(n);

  {ПЕРВЫЙ ВАРИАНТ}
  {-----------------------------}
  {наименьшим делителем составного числа может быть двойка(помимо 1)}
  {наибольшим делителем, который надо проверять, является целая часть от корня этого числа}
  {почему не надо проверять остальные я уже объяснил вк}
  a := true;
  for i := 2 to trunc(sqrt(n)) do
    a := a and (n mod i <> 0);
  {-----------------------------}

  {ВТОРОЙ ВАРИАНТ(правильнее, ибо нет лишних шагов цикла)}
  {Если нашелся делитель, то а становится равной false и цикл завершает работу}
  {-----------------------------------}
  a := true;
  i := 2;
  while a and (i <= trunc(sqrt(n))) do
    begin
      a := a and (n mod i <> 0);
      i := i + 1;
    end;
  {----------------------------------}

  writeln(n, ' is a prime number: ', a);
  readln;readln;
end.